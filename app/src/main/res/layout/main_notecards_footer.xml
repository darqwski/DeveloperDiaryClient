<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:clickable="false"
    android:minHeight="150dp"
    android:padding="8dp"
    android:clipChildren="true"
    android:clipToPadding="true"
    >

    <TextView
        android:text="Przewinąłeś kolejne 10 notatek"
        android:layout_width="match_parent"
        android:id="@+id/footerTitle1"
        android:padding="2dp"
        android:paddingLeft="5dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:layout_toEndOf="@+id/EmptyCardMonth"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Kliknij aby pobrać następne"
        android:layout_width="match_parent"
        android:id="@+id/footerTitle2"
        android:padding="2dp"
        android:paddingLeft="5dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:layout_below="@+id/footerTitle1"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Pobierz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/footerButton"
        android:background="@drawable/button_light_brown_ripple"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_below="@+id/footerTitle2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>